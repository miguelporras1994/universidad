

@{
    ViewData["Title"] = "Categorias";
}

<center><h2>Usuarios</h2></center>

<p>
    <a class="btn btn-success" data-toggle="modal" data-target="#CrearCategoria">Crear</a>
</p>

<div class="form-group">

    <div class="col-md-6">

        <input id="filtrar" name="filtrar" placeholder="Buscar" onkeyup="filtrarDatos(1,'nombre')" class="from-control" />
    </div>
</div>



<table class="table">
    <thead>
        <tr>
            <th>
               <a href="#" onclick='filtrarDatos(1,"id")'>Id</a>
            </th>
            <th>
                <a href="#" onclick='filtrarDatos(1,"nombre")'>Nombre</a>
                
            </th>
            <th>
                <a href="#" onclick='filtrarDatos(1,"des")'>Descripcion</a>
                
            </th>
            <th>
                <a href="#" onclick='filtrarDatos(1,"estado")'>Estado</a>
              
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody id="resultSearch"></tbody>
</table>
<div id="paginador">
</div>








<div class="modal fade" id="CrearCategoria" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <Center><h4 class="modal-title" id="myModalLabel">Nueva Categoria</h4> </Center>
            </div>
            <div class="modal-body">



                <form>

                    <div class="form-group">

                        @*<label for="CategoriaID" class="control-label">Numero de Categoria</label>
                        <input name="CategoriaID" id="CategoriaID" class="form-control" />*@


                        <div class="form-group">
                            <label for="Nombre" class="control-label">Nombre</label>
                            <input name="Nombre" id="Nombre" class="form-control" />

                        </div>


                    </div>

                    <div class="form-group">

                        <label for="Descripcion" class="control-label">Descripcion</label>
                        <input name="Descripcion" id="Descripcion" class="form-control" />
                    </div>








                    <div class="form-group">

                        <label for="Estado" class="control-label">Estado</label>
                        <select id="Estado" name="Estado" class="form-control">

                            <option value="0">Seleciones el Estado</option>
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>

                        </select>



                    </div>

                </form>

            </div>
            <div class="modal-footer">
                <Center>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>

                    <button type="button" class="btn btn-danger" onclick="AgregarCategoria()">Guardar Usuario</button>
                </Center>
            </div>
        </div>
    </div>
</div>














<div class="modal fade" id="EditarCaterogia" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Editar Categoria</h4>
            </div>
            <div class="modal-body">
                <form>





                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" name="CategoriaID1" id="CategoriaID1" />
                    </div>



                        <div class="form-group">
                            <label for="Nombre" class="control-label">Nombre</label>
                            <input name="Nombre1" id="Nombre1" class="form-control" />

                        </div>


                        <div class="form-group">

                            <label for="Descripcion" class="control-label">Descripcion</label>
                            <input name="Descripcion1" id="Descripcion1" class="form-control" />
                        </div>



                        <div class="form-group">

                            <label for="Estado" class="control-label">Estado</label>
                            <select id="Estado1" name="Estado1" class="form-control">

                                <option value="0">Seleciones el Estado</option>
                                <option value="true">Activo</option>
                                <option value="false">Inactivo</option>

                            </select>



                        </div>




                </form>
    </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="EditarCategoria()">Guardar datos</button>
            </div>
        </div>

    </div>

</div>


<div class="modal fade" id="ModaEstado" tabindex="-1" role="dialog">
<div class="modal-dialog" role="document">
<div class="modal-content">
<div class="modal-header">
<h4 id="titleCategoria" class="modal-title"></h4>
</div>

<div class="modal-footer">
    <center>
<button type="button" class="btn btn-default" data-dismiss="modal">No</button>
<button type="button" onclick="EditarEstado()" class="btn btn-primary">SI</button>
        </center>
</div>
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
