@model IEnumerable<universidad.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<center><h2>Usuarios</h2></center>

<p>
    <a  class="btn btn-success" data-toggle="modal" data-target="#CrearCatergoria">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    <a   class ="btn btn-success"asp-action="Edit" asp-route-id="@item.CaterogiaID">Editar</a> |
                    <a   class = "btn btn-info"asp-action="Details" asp-route-id="@item.CaterogiaID">Detalles</a> |
                    <a  class ="btn  btn-danger" asp-action="Delete" asp-route-id="@item.CaterogiaID">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>




<div class="modal fade" id="CrearCatergoria" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <Center><h4 class="modal-title" id="myModalLabel">Nuevo Usuario</h4> </Center>
            </div>
            <div class="modal-body">



                <form>

                    <div class="form-group">
                        <label for="CaterogiaID" class="control-label">Id Categoria</label>
                        <input name="CaterogiaID" id="CaterogiaID" class="form-control" />


                        <div class="form-group">
                            <label for="Nombre" class="control-label">Nombre</label>
                            <input name="Nombre" id="Nombre" class="form-control" />

                        </div>


                    </div>

                    <div class="form-group">
                        <label for="Descripcion " class="control-label">Descripcion </label>
                        <input name="Descripcion " id="Descripcion " class="form-control" />
                    </div>





                    



                    <div class="form-group">
                        <label for="Estado" class="control-label">Estado</label>
                        <select id="Estado" name="Estado" class="form-control">

                            <option value="0">Selecionar el Estad</option>
                            <option value="true">Activo</option>
                            <option value="False">Desactivado</option>

                        </select>



                    </div>





                </form>

            </div>
            <div class="modal-footer">
                <Center>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>

                    <button type="button" class="btn btn-danger" onclick="CrearUsuario('ApplicationUser/Crear')">Guardar Usuario</button>
                </Center>
            </div>
        </div>
    </div>
</div>