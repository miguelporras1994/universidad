@model IEnumerable<universidad.Models.Estudiante>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Cedula
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Codigo
            </th>
            <th>
                Correo
            </th>
            <th>
                Telefono
            </th>
            <th>

                Direccion
            </th>
            <th>
                Fecha Nacimiento
            </th>
            <th>
                Estado
            </th>
        </tr>
    </thead>
    <tbody id="MostrarEstudiante"></tbody>
</table>




<div class="modal fade" id="CrearEstudiante" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <center> <h4 class="modal-title" id="myModalLabel">Editar  Estudiante</h4> </center>
            </div>
            <div class="modal-body">
                @*<form asp-action=" ">*@
                <div class="form-horizontal">
                    <div class="form-group">
                        <input type="hidden"  id="IdEstudiante"/>
                    </div>
                    <div class="form-group">
                        <label for="Nombre" class="col-md-2 control-label">Nombre</label>
                        <div class="col-md-10">
                            <input for="Nombre" id="Nombre" placeholder="Nombre" name="Nombre" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Descripcion" class="col-md-2 control-label">Apellido</label>
                        <div class="col-md-10">
                            <input for="Apellido"  id="Apellido" placeholder="Apellido" name="Descripcion" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Correo" class="col-md-2 control-label"> Correo </label>
                        <div class="col-md-10">
                            <input for="Correo" id="Correo" placeholder="Correo" name="Correo" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Telefono" class="col-md-2 control-label">Telefono</label>
                        <div class="col-md-10">
                            <input for="Telefono" id="Telefono" placeholder="Telefono" name="Telefono" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Direccion" class="col-md-2 control-label">Direccion</label>
                        <div class="col-md-10">
                            <input for="Direccion" id="Direccion" placeholder="Direccion" name="Direccion" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Nacimiento" class="col-md-2 control-label">Fecha Nacimiento </label>
                        <div class="col-md-8">
                            <input for="Nacimiento" id="Nacimiento" placeholder="Fecha Nacimiento " name="Nacimiento" class="form-control" />
                        </div>
                    </div>


                    <div class="form-group">

                        <label for="Estado" class="col-md-2 control-label">Estado</label>
                        
                        <div class="col-md-10">
                            <select id="Estado" name="Estado" class="form-control">

                                <option value="0">Seleciones el Estado</option>
                                <option value="true">Activo</option>
                                <option value="false">Inactivo</option>

                            </select>

                        </div>
                    </div>


                </div>
            </div>

            <label id="mensaje" class="col-md-2 control-label"></label>
            @*</form>*@



            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" onclick="EditarEstudiante()" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>
