@model IEnumerable<universidad.Models.Tercero>

@{
    ViewData["Title"] = "Index";
}

<center><h2>Terceros</h2> </center>

<p>
    <a  class="btn btn-success" asp-action="Create">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a  class="btn btn-success" asp-action="Edit" asp-route-id="@item.TerceroID">Editar</a> |
                <a   class="btn btn-info" asp-action="Details" asp-route-id="@item.TerceroID">Detalles</a> |
                <a   class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.TerceroID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
